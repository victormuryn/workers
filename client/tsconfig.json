{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["ESNext", "dom"],
    "jsx": "react",
//    "allowJs": true,
//    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./types"]
  },
  "include": [
    "src",
    "node_modules/@types/jest/index.d.ts"
  ]
}
